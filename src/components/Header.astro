---
import Menu from './Menu.astro';
import Navigation from './Navigation.astro';
import ThemeIcon from './ThemeIcon.astro';

const items = [
  {url: '/', label: 'Home'}, 
  {url: '/about', label: "About Us"},
  {url: '/blog', label: "Blog"},
  {url: '/tags', label: "Posts By Tags"},
]
---
<header>
  <nav>
    <div>
      <ThemeIcon />
      <Menu />
    </div>
    <Navigation items={items} id="header-menu"/>
  </nav>
</header>

<style>
  div {
    display: flex;
    justify-content: space-between;
  }
</style>